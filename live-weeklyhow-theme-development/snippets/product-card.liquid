<div class="mx-auto">
	<div class="bg-white shadow-md rounded-lg">
		<a href="{{ product.url }}">
			<div class="w-full max-h-[400px] overflow-hidden">
				{{ product.featured_image | image_url: width: 512 | image_tag: class: 'hover:scale-125 transition ease-in-out duration-300 rounded-none' }}
			</div>
        </a>

		<div class="px-5 pb-5">
            <div class="flex flex-row items-center justify-between mt-3">
				<a href="{{ product.collections[0].url }}">
					<span class="text-blue-700 font-semibold text-base tracking-tight my-0">
						{{ product.collections[0].title }}
					</span>
				</a>

				{% if product.metafields.ratings.rates %}
					<div class="flex flex-row items-center justify-around gap-x-2 bg-gray-700 rounded-full h-[30px] px-[8px] py-[6px]">
						<div>
							{% render 'icon-star', custom_class: 'w-3 h-3' %}
						</div>
						
						<span class="text-xs text-white font-medium">{{ product.metafields.ratings.rates }}</span>
					</div>
				{% endif %}
			</div>

			<div>
				<h3>
					{{ product.title }}
				</h3>
			</div>
			
			{% if product.description %}
				<p>{{ product.description }}</p>
			{% endif %}
			
			<div class="flex flex-col justify-between gap-4 md:gap-0 sm:items-start md:items-center mt-4 md:flex-row">
				<span class="text-xl font-bold text-gray-900">{{ product.price | money_with_currency }}</span>
				<a href="{{ routes.cart_add_url }}" class="button primary-button">
					{% render 'icon-cart', custom_class: 'w-5 h-5 fill-white' %}
					Add to cart
				</a>
			</div> 
		</div>
	</div>
</div>