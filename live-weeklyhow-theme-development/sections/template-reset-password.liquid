<div class="my-10 w-100 md:w-1/2 mx-auto px-5">
    <h1 class="text-xl font-bold my-5">Reset your password</h1>
    {% form 'reset_customer_password', class: 'flex flex-col gap-y-5' %}
        {% if form.errors %}
            <div class="w-1/2 px-4 py-2 mx-auto bg-red-500 font-medium rounded">
                <span>{{ form.errors | default_errors }}</span>
            </div>
        {% endif %}

        <div class="flex flex-col gap-y-2 justify-start">
            <label for="password">New password</label>
            <input 
                type="password" 
                name="customer[password]"
                id="password"
                class="p-4 border-2 rounded-md"
            />
        </div>

        <div class="flex flex-col gap-y-2 justify-start">
            <label for="password_confirmation">Confirm new password</label>
            <input 
                type="password" 
                name="customer[password_confirmation]"
                id="password_confirmation"
                class="p-4 border-2 rounded-md"
            />
        </div>

        <button type="submit" class="button primary-button">Confirm</button>
    {% endform %}
</div>